{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "lib",
    "lib": ["ES6"],
    "moduleResolution": "Node16",
    "typeRoots": ["./node_modules/@types", "./types"],
    "declaration": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/**/*.test.ts", "node_modules"
  ]
}
